package cl.naitsirc.controller;

import java.util.Map;

import javax.servlet.http.HttpServletResponse;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.servlet.ModelAndView;

import cl.naitsirc.entity.Usuario;
import cl.naitsirc.service.UsuarioService;



@Controller
public class UsuarioController {

	@Autowired
	private UsuarioService usuarioService;
	
	@RequestMapping("/")
	public ModelAndView home(HttpServletResponse response) {
	    ModelAndView mav = new ModelAndView("index");
	    return mav;
	}
	
	@RequestMapping("/newUsuario")
	public String newCustomerForm(Map<String, Object> model) {
		Usuario usuario = new Usuario();
	    model.put("usuario", usuario);
	    return "new_usuario";
	}
	
	@RequestMapping(value = "/saveUsuario", method = RequestMethod.POST)
	public String saveCustomer(@ModelAttribute("usuario") Usuario usuario) {
		usuarioService.save(usuario);
	    return "redirect:/";
	}
}
